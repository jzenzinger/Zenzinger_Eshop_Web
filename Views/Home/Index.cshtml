@model IndexViewModel;
@{
    ViewData["Title"] = "Home Page";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/styles_homepage.css"/>
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a> and <a href="https://www.w3schools.com/howto/howto_css_parallax.asp">Parallax scrolling efect</a>.</p>
</div>

@{
    if (Model != null && Model.CarouselItems != null && Model.CarouselItems.Count > 0)
    {
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @{
                    //C# code, that renders into HMTL
                    for (int i = 0; i < Model.CarouselItems.Count; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carousel" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carousel" data-slide-to="@i"></li>
                        }
                    }
                }
            </ol>
            <div class="carousel-inner">
                @{
                    //C# code, that renders into HMTL
                    for (int i = 0; i < Model.CarouselItems.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@Model.CarouselItems[i].ImageSource" alt="@Model.CarouselItems[i].ImageAlt" style="height: 80vh;">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Model.CarouselItems[i].ImageSource" alt="@Model.CarouselItems[i].ImageAlt" style="height: 80vh;">
                            </div>
                        }
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
}
<!-- Section-->
@{
    if (Model != null && Model.Products != null && Model.Products.Count > 0)
    {
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-start">
                    @{
                        for (int i = 0; i < Model.Products.Count; i++)
                        {
                            <div class="col mb-5">
                                <div class="card h-100">
                                    <!-- Product image-->
                                    <img class="card-img-top" src="@Model.Products[i].ImageSource" alt="@Model.Products[i].ImageAlt"/>
                                    <!-- Product details-->
                                    <div class="card-body p-4">
                                        <div class="text-center">
                                            <!-- Product name-->
                                            <h5 class="fw-bolder">@Model.Products[i].ImageAlt</h5>
                                            <!-- Product price-->
                                            <p>@Model.Products[i].Price $</p>
                                        </div>
                                    </div>
                                    <!-- Product actions-->
                                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-controller="Product" asp-action="Detail" asp-route-ID="@Model.Products[i].ID">View options</a></div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </section>
    }
}

@section Scripts
{
    <environment include="Development">
            <script src="~/js/Product.js"></script>
        </environment>
    <environment exclude="Development">
        <script src="~/js/Product.min.js"></script>
    </environment>
    
