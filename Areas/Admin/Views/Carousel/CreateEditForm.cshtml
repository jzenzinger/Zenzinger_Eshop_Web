@using Zenzinger_Eshop_Web.Areas.Admin.Controllers
@model CarouselItem
@{
    if (ViewBag.Action != null)
    {
        <form asp-action="@ViewBag.Action" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            @{
                if (ViewBag.Action == nameof(CarouselController.Edit))
                {
                    <input asp-for="id" type="hidden" class="form-control">
                }
            }
            <div class="form-group">
                <label asp-for="Image">Image Source</label>
                <input asp-for="Image" class="form-control-file" id="fileUpload" accept="/image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageAlt">Image Alt</label>
                <input asp-for="ImageAlt" type="text" class="form-control" placeholder="Enter Image Alt">
                <span asp-validation-for="ImageAlt" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    }
}
